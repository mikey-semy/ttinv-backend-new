# Administrator email address
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password

# Logging configuration
LOGGING__LOG_FORMAT=pretty
LOGGING__LOG_FILE=./logs/app.log
LOGGING__LEVEL=DEBUG

# Authentication settings
# A secret key used for token generation and validation
TOKEN_SECRET_KEY=your_token_secret_key_here

# Email verification settings
VERIFICATION_URL=https://api.example.com/api/v1/register/verify-email/
PASSWORD_RESET_URL=https://api.example.com/api/v1/auth/reset-password/
LOGIN_URL=https://api.example.com/api/v1/auth

# SMTP email configuration
# SMTP_SERVER=mail.example.com
# SMTP_PORT=587
# SENDER_EMAIL=noreply@example.com
# SMTP_PASSWORD=your_smtp_password
SENDER_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# API documentation access settings
DOCS_ACCESS=true
DOCS_USERNAME=admin
DOCS_PASSWORD=your_docs_password

# Redis configuration
# REDIS_DSN=redis://default:password@redis-host:6379
REDIS_USER=default
REDIS_PASSWORD=your_redis_password
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_DB=0
REDIS_POOL_SIZE=10

# PostgreSQL database configuration
# DATABASE_DSN=postgresql://user:password@db-host:5432/dbname
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_HOST=your_db_host
POSTGRES_PORT=5432
POSTGRES_DB=your_db_name

# RabbitMQ configuration
RABBITMQ_CONNECTION_TIMEOUT=30
RABBITMQ_EXCHANGE=your_exchange_name
RABBITMQ_USER=admin
RABBITMQ_PASS=your_rabbitmq_password
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# AWS/S3 storage configuration (compatible with Yandex Cloud)
AWS_SERVICE_NAME=s3
AWS_REGION=ru-central1
AWS_ENDPOINT=https://storage.yandexcloud.net
AWS_BUCKET_NAME=your_bucket_name
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# CORS configuration
ALLOW_ORIGINS=["http://localhost:3000"]
ALLOW_CREDENTIALS=true
ALLOW_METHODS=["*"]
ALLOW_HEADERS=["*"]

# Yandex GPT API configuration
YANDEX_API_KEY=your_yandex_api_key
YANDEX_FOLDER_ID=your_yandex_folder_id
